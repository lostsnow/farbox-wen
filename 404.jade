        style(type="text/css").
            * {
                margin: 0;
                padding: 0;
            }
            html, body {
                width: 100%;
                height: 100%;
                font: 200 25px/1.5 Helvetica Neue, Helvetica, Sans-Serif;
            }
            img {
                border: none;
            }
            .text-center {
                text-align: center;
            }
            .box {
                background-color: #fff;
                margin: 0 auto;
                padding: 40px;
                width: 540px;
            }
            .c404 {
                margin: 0 auto;
                width: 200px;
                height: 200px;
            }
            .btn {
                background-color: #009a61;
                color: #fff;
                min-width: 80px;
                text-align: center;
                border: medium none;
                border-radius: 2px;
                font-size: 16px;
                padding: 6px 10px;
                text-decoration: none;
            }
            @media only screen and (max-width: 480px) {
                .box {
                    padding: 20px 0;
                    width: 100%;
                }
            }
